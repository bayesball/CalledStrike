\name{hit_plot}
\alias{hit_plot}

\title{
  Hit Plot
}
\description{
  Constructs hit plot for a specific player
}
\usage{
  hit_plot(df, title = "Probability of a Hit", NCOL = 2)
}
\arguments{
  \item{df}{
    data frame or list containing Statcast data
  }
  \item{title}{
    title for the graph
  }
  \item{NCOL}{
    number of columns in multipanel display
  }
}
\value{
  Constructs a tile plot of the hit probability
}
\author{
  Jim Albert
}


