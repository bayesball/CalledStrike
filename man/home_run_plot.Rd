\name{home_run_plot}
\alias{home_run_plot}

\title{
  Home Run Plot
}
\description{
  Constructs home run plot for a specific player
}
\usage{
  home_run_plot(df, title = "Probability of Home Run", NCOL = 2)
}
\arguments{
  \item{df}{
    data frame or list containing Statcast data
  }
  \item{title}{
    title for the graph
  }
  \item{NCOL}{
    number of columns in multipanel display
  }
}
\value{
  Constructs a tile plot of the home run probability
}
\author{
  Jim Albert
}


